{
  "extends": "@monorepo/tsconfig/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsxImportSource": "nativewind",
    "types": ["./env.d.ts", "node"]
  },
  "include": ["nativewind-env.d.ts", "next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
