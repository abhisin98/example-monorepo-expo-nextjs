{
  "name": "monorepo",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=v20.10.0"
  },
  "packageManager": "pnpm@10.16.0",
  "workspaces": [
    "apps/*",
    "packages/**/*"
  ],
  "scripts": {
    "dev": "turbo dev --parallel",
    "build": "turbo build --concurrency 1 --continue",
    "lint": "turbo lint",
    "lint:packages": "turbo lint --filter=@monorepo/*",
    "lint:all": "eslint .",
    "type-check": "turbo type-check",
    "type-check:packages": "turbo type-check --filter=@monorepo/*",
    "test": "turbo test --concurrency 1 --continue",
    "test:packages": "turbo test --concurrency 1 --continue --filter=@monorepo/*",
    "test:all": "jest",
    "clean": "rimraf -v --glob \"./{apps,packages}/**/{.turbo,.next,.expo,build}\"",
    "clean:all": "rimraf -v --glob \"./**/{node_modules,.turbo,.next,.expo,build}\"",
    "start": "turbo start",
    "format": "prettier --write \"**/*.*\" --config .prettierrc.json  --ignore-path .gitignore --ignore-path .prettierignore"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@expo/ngrok": "latest",
    "@monorepo/eslint-config": "workspace:^",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@testing-library/react-native": "13.3.3",
    "@types/jest": "^30.0.0",
    "@types/node": "24.3.3",
    "@types/react-dom": "^19.1.9",
    "@types/react-test-renderer": "19.1.0",
    "concurrently": "latest",
    "dotenv": "latest",
    "dotenv-cli": "latest",
    "eslint": "9.35.0",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.10",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0",
    "rimraf": "latest",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "turbo": "latest",
    "typescript": "~5.9.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    },
    "overrides": {},
    "ignoredBuiltDependencies": [
      "@swc/core",
      "sharp"
    ]
  }
}
