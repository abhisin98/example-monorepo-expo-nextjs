{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", ".next/**", "!.next/cache/**", ".expo/**", "node_modules/.cache/metro/**"],
      "outputLogs": "new-only"
    },
    "lint": {},
    "type-check": {},
    "test": {},
    "clean": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
